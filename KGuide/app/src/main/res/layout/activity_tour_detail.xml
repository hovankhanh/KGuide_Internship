<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TourDetailActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/img_tour_detail"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                </ImageView>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_long"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location:"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name City"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="45 VND"
                            android:gravity="right"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>
                    <View
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@android:color/black"/>
                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hahaha"
                        android:layout_marginBottom="10dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@android:color/black"/>

                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Local topics:"/>
                    <TextView
                        android:id="@+id/tv_topic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Topic"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service:"/>
                    <TextView
                        android:id="@+id/tv_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="swimming"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Laguages:"/>
                    <TextView
                        android:id="@+id/tv_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="English"
                        android:textColor="@android:color/black" />
                    <View
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@android:color/black"/>
                    <TextView
                        android:id="@+id/tv_available"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="content"/>
                    <View
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@android:color/black"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Guide:"/>
                    <TextView
                        android:id="@+id/tv_name_guide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Name guide"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="60dp"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    <android.support.v7.widget.Toolbar
        app:titleTextColor="#DA0909"
        app:title="Tour's name"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00E7E0E0">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/ln_book"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="4"
        android:background="#B20A0A0A">
        <TextView
            android:id="@+id/tv_price_book"
            android:layout_marginLeft="20dp"
            android:layout_weight="4"
            android:gravity="left"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45 VND"
            android:textColor="@android:color/background_light"/>
        <Button
            android:id="@+id/btn_book"
            android:textColor="#FFF"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="BOOK"
            android:background="#f50a0a"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
