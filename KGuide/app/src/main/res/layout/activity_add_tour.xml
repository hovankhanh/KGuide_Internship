<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.AddTourActivity"
    android:background="#F3DFDDDD">

    <android.support.v7.widget.Toolbar
        app:titleTextColor="#DA0909"
        app:title="My Tours"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00FFFFFF">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#BB0000"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:gravity="right" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@android:color/black" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_background_register"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <Switch
                    android:id="@+id/sw_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Group"
                    android:drawableLeft="@drawable/icon_group"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_background_register"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_city"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:text="Select city"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_background_register"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tv_topic"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/icon_topic"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:text="Local topics"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/icon_plus"
                    android:paddingRight="10dp"
                    />
                    <ListView
                        android:id="@+id/lv_topic"
                        android:layout_marginLeft="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="300dp">
                    </ListView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_background_register"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tv_service"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/icon_service"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:text="Service options"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/icon_plus"
                    android:paddingRight="10dp"
                    />
                    <ListView
                        android:id="@+id/lv_service"
                        android:layout_marginLeft="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="350dp">
                    </ListView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_background_register"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/icon_age"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:text="Suitable for age"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/icon_plus"
                    android:paddingRight="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ln_age">
                    <ListView
                        android:id="@+id/lv_age"
                        android:layout_marginLeft="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                    </ListView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_background_register"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tv_language"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/icon_language"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:text="Tour language"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/icon_plus"
                    android:paddingRight="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ln_language">
                    <ListView
                        android:id="@+id/lv_language"
                        android:layout_marginLeft="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">

                    </ListView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_background_register"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/icon_time"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:text="Tour availability"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/icon_plus"
                    android:paddingRight="10dp"
                    />
                <LinearLayout
                    android:id="@+id/ln_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ListView
                        android:id="@+id/lv_time"
                        android:layout_marginLeft="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">
                    </ListView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_parent_group_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_background_register"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tv_group_size"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/icon_group"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:text="Group size"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/icon_plus"
                    android:paddingRight="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ln_group_size">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Minimum"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maximum"
                        android:layout_marginLeft="80dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>