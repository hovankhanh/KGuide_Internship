<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.GuideDetailActivity"
    android:orientation="vertical"
    android:background="@drawable/background_login">

    <android.support.v7.widget.Toolbar
        app:titleTextColor="#DA0909"
        app:title="Guide's name"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00E7E0E0">
    </android.support.v7.widget.Toolbar>

            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/img_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Avatar"
                android:background="@drawable/circle_avatar" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name's guide"
                android:layout_gravity="center_horizontal"/>
            <RatingBar
                android:layout_gravity="center_horizontal"
                style="?android:attr/ratingBarStyleSmall"
                android:id="@+id/rtb_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:rating="3.0"
                android:layout_marginBottom="20dp"/>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tablayout"
        android:background="@drawable/circle_login_button"
        android:minHeight="?attr/actionBarSize">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vp_tourist">

    </android.support.v4.view.ViewPager>

</LinearLayout>